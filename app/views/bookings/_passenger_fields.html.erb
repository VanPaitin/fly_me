  <div class="row nested-fields">
    <div class="col-md-12 well passenger-box">
      <h3>Passenger</h3>

      <div class="form-group">
        <%= f.label :name, "Name:", class: "control-label col-sm-2"%>
        <div class="col-md-9">
          <%= f.text_field :name, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email:", class: "control-label col-sm-2" %>
        <div class="col-md-9">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, "Phone", class: "control-label col-sm-2" %>
        <div class="col-md-9">
          <%= f.phone_field :phone_number, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= link_to_remove_association "Remove Passenger", f %>
      </div>
    </div>
  </div>
