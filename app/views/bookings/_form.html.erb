
<div class="row passenger_details">
    <div class="col-md-6 col-md-offset-3">
    <% unless current_user %>
      <h5>Please, know that you might have to login in order to keep track of your bookings</h5>
    <% end %>
      <div class="row">
        <h2>Passenger Details</h2>
        <p>Please enter passenger details for flight:</p>

        <div class=" col-md-12 well flight-details">
          <div class"panel-body">
            <table class="table">
              <thead>
                <tr>
                  <th>Flight Number:</th>
                  <th>Departure Airport</th>
                  <th>Destination Airport</th>
                  <th>Departure Date</th>
                  <th>Departure Time</th>
                  <th>Price <span><p>(No. of passengers x $1200)</p></span></th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <td><%= @flight.id %></td>
                  <td><%= @flight.from_airport.name + ", " + @flight.from_airport.city %></td>
                  <td><%= @flight.to_airport.name + ", " + @flight.to_airport.city %></td>
                  <td><%= @flight.date.strftime("#{@flight.date.day.ordinalize} %B %Y") %></td>
                  <td><%= @flight.time %></td>
                  <td>$ <%= @no_of_passengers * 1200 %></td>
                </tr>
              </tbody>
            </table>
            </div>
          </div>
          </div>

      <%= form_for [@flight, @booking], :html => { :class => "form-horizontal" } do |f|  %>
        <% if @booking.errors.any? %>
          <div id="error_explanation">

            <h2>
              <%= pluralize(@booking.errors.count, "error") %>
            </h2>

            <ul>
              <% @booking.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

       <% passenger_place_holder = 1 %>
          <%= f.fields_for :passengers do | pass| %>
            <div class="row">
              <div class="col-md-12 well passenger-box">
                <h3>Passenger <%= passenger_place_holder %></h3>

                <div class="form-group">
                  <%= pass.label :name, "Name:", class: "control-label col-sm-2"%>
                  <div class="col-md-9">
                    <%= pass.text_field :name, class: "form-control"%>
                  </div>
                </div>

                <div class="form-group">
                  <%= pass.label :email, "Email:", class: "control-label col-sm-2" %>
                  <div class="col-md-9">
                    <%= pass.email_field :email, class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= pass.label :phone_number, "Phone", class: "control-label col-sm-2" %>
                  <div class="col-md-9">
                    <%= pass.phone_field :phone_number, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
           <% passenger_place_holder += 1 %>
         <% end %>

        <%= f.hidden_field :price, value: (passenger_place_holder - 1) * 1200 %>
         <%= f.submit "Book Flight", class: "btn btn-success btn-lg col-md-4 col-md-offset-4" %>
      <% end %>
  </div>
</div>